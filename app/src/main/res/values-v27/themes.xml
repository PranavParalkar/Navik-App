<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme for Android 8.1 (API 27) and above with better system bars -->
    <style name="Base.Theme.Navik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color - matches header -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Enable proper system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <style name="Theme.Navik" parent="Base.Theme.Navik" />
</resources>
