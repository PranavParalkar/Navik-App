<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Navik" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Material3 shape overrides for rounder corners -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeSmall</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeMedium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeLarge</item>

        <!-- Default text appearance improvements -->
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Theme.Navik" parent="Base.Theme.Navik" />

    <!-- Login theme with gradient background -->
    <style name="Theme.Navik.Login" parent="Base.Theme.Navik">
        <item name="android:windowBackground">@drawable/img_login_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.Navik.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_inset</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Navik</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeSmall" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeMedium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeLarge" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Button Styles -->
    <style name="NavikButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="NavikButton.Primary">
        <item name="android:background">@drawable/bg_button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="NavikButton.Outline">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Card Styles -->
    <style name="NavikCard">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="NavikCard.Elevated">
        <item name="cardElevation">12dp</item>
    </style>

    <!-- Text Styles -->
    <style name="NavikText" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NavikText.Heading">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="NavikText.Subheading">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="NavikText.Body">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="NavikText.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- Bottom Nav Label Style -->
    <style name="NavikNavLabel">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/nav_inactive</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NavikNavLabel.Active">
        <item name="android:textColor">@color/nav_active</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Drawer Menu Item Text -->
    <style name="NavikDrawerItem" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
</resources>
