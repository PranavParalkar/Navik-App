<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Navik" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color - transparent for gradient -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@drawable/img_login_background</item>
        
        <!-- Enable proper system bars -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.Navik" parent="Base.Theme.Navik" />

    <!-- Splash theme used only for launcher activity.
         Shows your app logo instead of the default Android icon. -->
    <style name="Theme.Navik.Splash" parent="Theme.SplashScreen">
        <!-- Android 12+ splash configuration -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_inset</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Navik</item>

        <!-- Pre-Android-12 fallback -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>