<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FA709A"
                android:endColor="#FEE140"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Chart bars simulation -->
    <item android:bottom="40dp" android:left="40dp" android:width="30dp" android:height="60dp" android:gravity="bottom|start">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>
    
    <item android:bottom="40dp" android:gravity="center_horizontal|bottom" android:width="30dp" android:height="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>
    
    <item android:bottom="40dp" android:right="40dp" android:width="30dp" android:height="80dp" android:gravity="bottom|end">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>
</layer-list>