<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4FACFE"
                android:endColor="#00F2FE"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Decorative circles -->
    <item android:top="20dp" android:right="20dp" android:width="60dp" android:height="60dp" android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <item android:bottom="30dp" android:left="30dp" android:width="80dp" android:height="80dp" android:gravity="bottom|start">
        <shape android:shape="oval">
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
    
    <!-- Center icon area -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="100dp" android:height="100dp" />
            <solid android:color="#80FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>