<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F093FB"
                android:endColor="#F5576C"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Decorative elements -->
    <item android:top="30dp" android:left="30dp" android:width="40dp" android:height="40dp" android:gravity="top|start">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <item android:bottom="40dp" android:right="40dp" android:width="50dp" android:height="50dp" android:gravity="bottom|end">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Center area -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="120dp" android:height="120dp" />
            <solid android:color="#60FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</layer-list>