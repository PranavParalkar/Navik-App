<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#43E97B"
                android:endColor="#38F9D7"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Path line simulation -->
    <item android:top="80dp" android:left="40dp" android:right="40dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item android:top="160dp" android:left="40dp" android:right="40dp" android:height="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Milestone markers -->
    <item android:top="70dp" android:left="40dp" android:width="24dp" android:height="24dp" android:gravity="top|start">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:top="150dp" android:right="40dp" android:width="24dp" android:height="24dp" android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:bottom="60dp" android:gravity="center_horizontal|bottom" android:width="24dp" android:height="24dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>