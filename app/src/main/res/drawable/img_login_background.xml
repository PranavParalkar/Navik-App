<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6C63FF"
                android:centerColor="#7B6EE6"
                android:endColor="#9D97FF"
                android:angle="135" />
        </shape>
    </item>
    <item android:top="-60dp" android:right="-60dp" android:width="220dp" android:height="220dp" android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#18FFFFFF" />
        </shape>
    </item>
    <item android:bottom="-100dp" android:left="-100dp" android:width="280dp" android:height="280dp" android:gravity="bottom|start">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF" />
        </shape>
    </item>
    <item android:top="120dp" android:left="60dp" android:width="100dp" android:height="100dp" android:gravity="top|start">
        <shape android:shape="oval">
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>
    <item android:bottom="200dp" android:right="30dp" android:width="60dp" android:height="60dp" android:gravity="bottom|end">
        <shape android:shape="oval">
            <solid android:color="#0DFFFFFF" />
        </shape>
    </item>
</layer-list>
