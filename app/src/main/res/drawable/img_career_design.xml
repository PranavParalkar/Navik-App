<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FA709A"
                android:endColor="#FEE140"
                android:angle="135" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Palette circles -->
    <item android:top="25dp" android:left="25dp" android:width="20dp" android:height="20dp" android:gravity="top|start">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:top="25dp" android:right="25dp" android:width="20dp" android:height="20dp" android:gravity="top|end">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:bottom="25dp" android:gravity="center_horizontal|bottom" android:width="20dp" android:height="20dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Brush -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>