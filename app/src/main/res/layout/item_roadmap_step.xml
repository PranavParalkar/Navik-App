<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/spacing_medium">

    <!-- Timeline Line -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Step Number Circle -->
        <TextView
            android:id="@+id/stepNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_chat_button"
            android:gravity="center" />

        <!-- Connecting Line -->
        <View
            android:id="@+id/connectingLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/spacing_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Step Title -->
            <TextView
                android:id="@+id/stepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š Complete 10+2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Step Description -->
            <TextView
                android:id="@+id/stepDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus on Mathematics and Science subjects"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Details Section -->
            <LinearLayout
                android:id="@+id/detailsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Exams -->
                <TextView
                    android:id="@+id/stepExams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Exams: JEE Main, JEE Advanced"
                    android:textSize="13sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Branches -->
                <TextView
                    android:id="@+id/stepBranches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ“ Branches: CSE, IT, ECE"
                    android:textSize="13sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <!-- Duration -->
                <TextView
                    android:id="@+id/stepDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ Duration: 2 years"
                    android:textSize="13sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Expand Button -->
            <TextView
                android:id="@+id/btnExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details â–¼"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_small"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>