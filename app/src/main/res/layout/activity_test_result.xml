<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue_bg"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰"
        android:textSize="80sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Completed!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="32dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"
        android:radius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Score"
                android:textSize="20sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8/10"
                android:textSize="56sp"
                android:textStyle="bold"
                android:textColor="@color/purple_card"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/percentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/success" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnViewReport"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="View Full Report"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_purple"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBackToTests"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Back to Tests"
        android:textSize="18sp"
        android:textColor="@color/purple_card"
        android:background="@drawable/bg_button_outline" />

</LinearLayout>
