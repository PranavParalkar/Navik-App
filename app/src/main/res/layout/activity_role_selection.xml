<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Top spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="48dp" />

            <!-- App Logo with glow effect -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="16dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/appicon"
                        android:padding="18dp"
                        android:scaleType="fitCenter"
                        android:contentDescription="Navik Logo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Navik"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:letterSpacing="-0.02"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Career Guidance Platform"
                    android:textSize="15sp"
                    android:textColor="@color/text_white"
                    android:alpha="0.85"
                    android:letterSpacing="0.08" />

            </LinearLayout>

            <!-- Tagline in glass pill -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pill_tag"
                android:text="ðŸš€  Choose your path to get started"
                android:textSize="14sp"
                android:textColor="@color/text_white"
                android:layout_marginBottom="28dp"
                android:gravity="center" />

            <!-- Card: Join as Student -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStartAsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_user_card"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Icon + Title row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="14dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp">

                            <View
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bg_glass_card" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸŽ“"
                                android:textSize="32sp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I'm a Student"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Explore careers &amp; grow your skills"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.85"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature tags -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ“ Tests"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ—ºï¸ Roadmaps"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ’¼ Jobs"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ¤ Mentors"
                            android:textSize="12sp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Arrow indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Started"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†’"
                            android:textSize="20sp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Join as Mentor -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStartAsMentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient_mentor_card"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Icon + Title row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="14dp">

                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp">

                            <View
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bg_glass_card" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ðŸ§­"
                                android:textSize="32sp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="I'm a Mentor"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Guide students &amp; share expertise"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:alpha="0.85"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Feature tags -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ“‹ Profile"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ‘¥ Students"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_tag"
                            android:text="ðŸ“Š Impact"
                            android:textSize="12sp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- Arrow indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create Profile"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†’"
                            android:textSize="20sp"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can always change your role later"
                android:textSize="12sp"
                android:textColor="@color/text_white"
                android:alpha="0.6"
                android:layout_marginTop="8dp"
                android:gravity="center" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
