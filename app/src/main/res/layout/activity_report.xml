<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“Š Analysis Report"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/appicon"
                    android:scaleType="fitCenter"
                    android:contentDescription="Navik Logo" />

            </LinearLayout>

            <!-- Personal Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="4dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name : XYZ"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth :\ndd/mm/yyyy"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact No: XXXXXXXXX844"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address :    XYZ"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:        xyz@gmail.com"
                            android:textSize="12sp"
                            android:textColor="@color/blue_primary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date : dd/mm/yyyy"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender : M/F/O"
                            android:textSize="12sp"
                            android:textColor="@color/text_dark"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Academic Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_section"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic Details :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="4dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Educational Board : C.B.S.E"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subjects :                X,Y,Z"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School / College :    ABC INTERNATIONAL SCHOOL"
                    android:textSize="12sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic achievement :"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="7th"
                        android:gravity="center"
                        android:background="@drawable/bg_grade_box"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="8th"
                        android:gravity="center"
                        android:background="@drawable/bg_grade_box"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="9th"
                        android:gravity="center"
                        android:background="@drawable/bg_grade_box"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="10th"
                        android:gravity="center"
                        android:background="@drawable/bg_grade_box"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="11th"
                        android:gravity="center"
                        android:background="@drawable/bg_grade_box"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="12th"
                    android:gravity="center"
                    android:background="@drawable/bg_grade_box"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Test Scores Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your scores on different psychological tests :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginVertical="12dp" />

            <!-- Aptitude Test -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Aptitude Test"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Percentiles refers to the percentage of people from your age group that scored lower than you."
                android:textSize="10sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="16dp" />

            <!-- IQ Test -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Intellectual Ability :"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp" />

            <!-- Memory Test -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Memory Concentration Test :"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:layout_marginBottom="80dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_home"
                    android:contentDescription="Home"
                    app:tint="@color/primary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navFiles"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_files"
                    android:contentDescription="Tests"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navSkills"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_skills"
                    android:contentDescription="Skills"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navCareer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_career"
                    android:contentDescription="Career"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navFiles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_files" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navBooks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_books" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
